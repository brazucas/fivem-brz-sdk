{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/server", "@types/node"],
    "lib": ["ES2020"],
    "paths": {
      "@shared/*": ["../../src/shared/*"]
    },
    "sourceMap": true,
    "declaration": true
  },
  "include": ["./**/*", "../nodejs.ts", "../../src/shared/**/*", "../../build"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
