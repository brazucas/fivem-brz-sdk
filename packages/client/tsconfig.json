{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/client", "@types/node"],
    "lib": ["ES2020"],
    "paths": {
      "@shared/*": ["../../src/shared/*"]
    }
  },
  "include": ["./**/*", "../nodejs.ts", "../../src/shared/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
